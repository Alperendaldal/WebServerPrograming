@model List<WebServerPrograming.Models.Movie>

@{
    ViewData["Title"] = "Your Cart";
}

<link rel="stylesheet" href="~/css/cart.css" asp-append-version="true" />

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Your cart is empty.</div>
}
else
{
    <div class="cart">
        <h2>Your Cart</h2>
        <table>
            <tr>
                <th>Cover Image</th>
                <th>Title</th>
                <th>Director</th>
            </tr>
            @foreach (var movie in Model)
            {
                <tr>
                    <td><img src="@Url.Content(movie.ImageUrl)" alt="Movie Cover" /></td>
                    <td>@movie.Title</td>
                    <td>@movie.Director</td>  
                </tr>
            }
        </table>
        <a href="/" class="go-to-home-btn">Go to HomePage</a>
    </div>
}